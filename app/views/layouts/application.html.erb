<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navibar">
  <%= link_to 'breweries', breweries_path %>
  <%= link_to 'beers', beers_path %>
  <%= link_to 'ratings', ratings_path %>
  <%= link_to 'users', users_path %>
  <%= link_to 'clubs', beer_clubs_path %>
  <%= link_to 'places', places_path %>
  <b>|</b>
  <% unless current_user %>
  <%= link_to 'signin', signin_url %>
  <%= link_to 'signup', signup_url %>
  <% end %>
  <% if current_user %>
  <%= link_to 'signout',  session_url,  method: :delete%>
  <%= link_to current_user.username, current_user %>
  <%= link_to 'rate', new_rating_url %>
  <%= link_to 'join a club', new_membership_url %>
<% end %>
</div>
<%= yield %>
</body>
</html>
